{
    "$schema": "https://json.schemastore.org/prettierrc",

    "printWidth": 100,
    "tabWidth": 4,
    "useTabs": false,

    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "arrowParens": "always",
    "bracketSpacing": true,

    "jsxSingleQuote": false,
    "bracketSameLine": false,

    "endOfLine": "lf",
    "proseWrap": "preserve",
    "embeddedLanguageFormatting": "auto"
}
